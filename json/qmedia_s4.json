{
	"root": "https://www.siguyy.com/",
	"search_format": "https://www.siguyy.com/search/-------------.html?wd=%s&submit=",
	"isPost": false,
	"search_rule": {
		"title": "//ul[@id='searchList']/div[1]/a/@title",
        "link": "//ul[@id='searchList']/div[1]/a/@abs:href",
        "img": "//ul[@id='searchList']/div[1]/a/@abs:data-original"
	},
	"detail_rule": {
		"play_url": "//div[@class='online-button']/a/@abs:href",
        "intro": "//div[@class='myui-content__detail']/p[4]/text()",
        "thumb": "//img[@class='img-thumbnail']/@src",
        "items": "//ul[@class='myui-content__list']/li/a",
		"attribute": [
          "//div[@class='myui-content__detail']/p[1]/text()",
          "//div[@class='myui-content__detail']/p[2]/text()",
          "//div[@class='myui-content__detail']/p[3]/text()",
          "//div[@class='myui-content__detail']/p[5]/text()"
        ]
	},
	"play_video":""
}